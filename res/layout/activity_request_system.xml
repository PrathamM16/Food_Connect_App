<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/food2"
        android:scaleType="centerCrop" />

    <!-- Input fields for food item request details -->
    <EditText
        android:id="@+id/editTextFoodItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Food Item Needed"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/editTextDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Additional Details (Optional)"
        android:layout_below="@id/editTextFoodItem"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <!-- Button to submit the request -->
    <Button
        android:id="@+id/buttonSubmitRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Request"
        android:layout_below="@id/editTextDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

</RelativeLayout>
