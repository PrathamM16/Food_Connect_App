<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DashboardActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY DASHBOARD"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/food_2"
        android:scaleType="centerCrop" />

    <!-- Buttons -->
    <Button
        android:id="@+id/buttonFoodListings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Food Listings"
        android:layout_marginTop="52dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/orange" />

    <Button
        android:id="@+id/buttonRequestSystem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Request System"
        android:layout_below="@id/buttonFoodListings"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/orange" />

    <Button
        android:id="@+id/buttonPickupDelivery"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pick-up and Delivery Options"
        android:layout_below="@id/buttonRequestSystem"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/orange" />

    <Button
        android:id="@+id/buttonCommunityKitchen"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Community Kitchen Integration"
        android:layout_below="@id/buttonPickupDelivery"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/orange" />

    <Button
        android:id="@+id/buttonDonationOption"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Donation Option"
        android:layout_below="@id/buttonCommunityKitchen"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/orange" />

    <Button
        android:id="@+id/buttonMessagingNotifications"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Messaging and Notifications"
        android:layout_below="@id/buttonDonationOption"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/orange" />

    <Button
        android:id="@+id/buttonCommunityEngagement"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Community Engagement"
        android:layout_below="@id/buttonMessagingNotifications"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/orange" />

</RelativeLayout>
