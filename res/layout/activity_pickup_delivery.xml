<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/del"
        android:scaleType="centerCrop" />

    <!-- Your existing LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Input fields for pickup details -->
        <EditText
            android:id="@+id/editTextPickupAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Pickup Address"/>

        <!-- Input fields for delivery details -->
        <EditText
            android:id="@+id/editTextDeliveryAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Delivery Address"/>

        <!-- Button to submit pickup and delivery details -->
        <Button
            android:id="@+id/buttonSubmitDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"/>
    </LinearLayout>

</RelativeLayout>
